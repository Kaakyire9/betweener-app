{
  "expo": {
    "name": "Betweener",
    "owner": "kaakyire9",
    "slug": "betweener",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "betweenerapp",
    "platforms": ["ios", "android"],
    "userInterfaceStyle": "automatic",

    "icon": "./assets/images/ios-icon-1024.png",

    "ios": {
      "bundleIdentifier": "com.aduboffour.betweener",
      "icon": "./assets/images/ios-icon-1024.png",
      "associatedDomains": ["applinks:getbetweener.com"],
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "com.aduboffour.betweener",
            "CFBundleURLSchemes": ["betweenerapp"]
          }
        ],
        "LSApplicationQueriesSchemes": ["betweenerapp"],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false
        }
      }
    },

    "android": {
      "package": "com.aduboffour.betweener",
      "googleServicesFile": "./google-services.json",
      "softwareKeyboardLayoutMode": "resize",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/foreground-icon.png",
        "backgroundImage": "./assets/images/background-icon.png"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [{ "scheme": "betweenerapp" }],
          "category": ["BROWSABLE", "DEFAULT"],
          "autoVerify": true
        },
        {
          "action": "VIEW",
          "data": [{ "scheme": "betweenerapp", "host": "auth" }],
          "category": ["BROWSABLE", "DEFAULT"],
          "autoVerify": true
        },
        {
          "action": "VIEW",
          "data": [{ "scheme": "https", "host": "getbetweener.com" }],
          "category": ["BROWSABLE", "DEFAULT"],
          "autoVerify": true
        }
      ]
    },

    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-router",
        {
          "origin": "betweenerapp://"
        }
      ],
      "expo-font",
      "expo-web-browser",
      "expo-video"
    ],

    "extra": {
      "eas": {
        "projectId": "7de6cdc4-8616-446f-99de-82764af3a7e6"
      }
    }
  }
}
